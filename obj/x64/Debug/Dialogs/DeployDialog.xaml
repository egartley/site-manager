<ContentDialog x:ConnectionId='1'
    x:Class="Site_Manager.DeployDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Deploy"
    PrimaryButtonText="OK"
    IsPrimaryButtonEnabled="False"
                                                         >

    <StackPanel>
        <TextBlock x:ConnectionId='2' Name="StatusTextBlock" Margin="0,20,0,16" />
        <ProgressBar x:ConnectionId='3' Name="DeployProgressBar" IsIndeterminate="False" Margin="0,0,0,24" Value="0" HorizontalAlignment="Stretch" />
        <ScrollViewer x:ConnectionId='4' Name="LogScrollViewer" HorizontalAlignment="Stretch" MaxHeight="250" Height="250" HorizontalScrollMode="Auto" VerticalScrollMode="Auto">
            <TextBlock x:ConnectionId='5' Name="LogTextBlock" FontSize="12" />
        </ScrollViewer>
    </StackPanel>
</ContentDialog>

