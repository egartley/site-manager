<ContentDialog
    x:Class="Site_Manager.ChangeRedirectionDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="go.egartley.net/">

    <StackPanel>
        <TextBlock Margin="0,24,0,0" Foreground="DarkGray">Redirects to</TextBlock>
        <TextBlock x:ConnectionId='1' Name="DestinationTextBlock" Margin="0,0,0,16" TextWrapping="Wrap" FontSize="18">http://example.com</TextBlock>

        <TextBlock Margin="0,8,0,4" Foreground="DarkGray">Rename</TextBlock>
        <TextBox x:ConnectionId='2' Name="RenameTextBox" PlaceholderText="Short Link"                                         IsEnabled="False" />

        <TextBlock Margin="0,24,0,4" TextWrapping="Wrap" FontSize="18" Foreground="Red" FontWeight="SemiBold">Danger Zone</TextBlock>
        <CheckBox x:ConnectionId='3' Name="DeleteRedirectionCheckBox"                                        >Delete this redirection</CheckBox>

        <CheckBox x:ConnectionId='4' Name="ConfirmationCheckBox" Visibility="Collapsed"                                   >Are you sure?</CheckBox>
        <StackPanel Orientation="Horizontal" Margin="0,24,0,0">
            <Button x:ConnectionId='5' Name="ApplyButton" Width="128" IsEnabled="False"                           Style="{StaticResource ButtonRevealStyle}">Apply</Button>
            <StackPanel x:ConnectionId='6' Name="WorkingStackPanel" Orientation="Horizontal" Margin="18,0,0,0" Visibility="Collapsed">
                <ProgressRing x:ConnectionId='8' Name="WorkingProgressRing" Margin="0,0,12,0" Width="24" Height="24" VerticalAlignment="Center" Visibility="Collapsed"/>
                <TextBlock x:ConnectionId='9' Name="WorkingTextBlock" HorizontalAlignment="Center" Visibility="Collapsed" VerticalAlignment="Center">Working...</TextBlock>
            </StackPanel>
            <Button x:ConnectionId='7' Name="OkButton" Width="128" Margin="12,0,0,0"                        Visibility="Visible" Style="{StaticResource ButtonRevealStyle}">OK</Button>
        </StackPanel>
    </StackPanel>
</ContentDialog>

