<ContentDialog
    x:Class="Site_Manager.RedirectionDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="go.egartley.net/"
    PrimaryButtonText="Modify"
    SecondaryButtonText="OK"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    SecondaryButtonClick="ContentDialog_SecondaryButtonClick"
    IsPrimaryButtonEnabled="False">

    <StackPanel>
        <TextBlock Margin="0,24,0,0" Foreground="{ThemeResource TextControlForegroundDisabled}" >Redirects to</TextBlock>
        <TextBlock Name="DestinationTextBlock" Visibility="Visible" Margin="0,0,0,12" TextWrapping="Wrap" FontSize="18">DESTINATION</TextBlock>
        <ProgressBar Name="DestinationProgressBar" IsIndeterminate="True" Visibility="Collapsed" Margin="0,12,0,12" HorizontalAlignment="Stretch" />
    </StackPanel>
</ContentDialog>